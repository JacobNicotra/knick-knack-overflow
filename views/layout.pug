doctype html
html
  head
      block head
        title="Knackerflow"
        link(rel='stylesheet' href='/stylesheets/reset.css')
        link(rel='stylesheet' href='/stylesheets/validation.css')
        //- font awesome cdn
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" rel="stylesheet">
  body
    ul(id='navBar')
      ul(class="navLeft")
        li(id="snowManHolder")
          a(href="/" class="navLink navTitle" id="navTitle") Knick Knack Overflow
      ul(class="navRight")
        li.searchy-li
          form(action="/questions/search" method="get" class="search-form")
                if searchErrors
                  input(type="text" name="searchTerm" id="searchForm" placeholder=searchErrors)
                else
                  input(type="text" name="searchTerm" id="searchForm" placeholder=" Search questions...")
                button: i(class="fas fa-search")
        if locals.authenticated
            li
              a(href=`/users/${user.id}` class="navLink") Profile
            li
              a(href="/questions/new" class="navLink") Ask Question!
            li
              form(action='/users/logout' method='post')
                button(class="navLink logout-btn") Logout
        else
            li
              a(href="/users/demo" class="navLink") Demoman
            li
              a(href="/users/login" class="navLink login-btn") Log in
            li
              a(href="/users/register" class="navLink register-btn") Register
    block content

    footer(class="main-footer")
      .footer-about
