
mixin validationErrorSummary(errors)
  if errors
    div(class='validation-errors')
      div#validation-list
        each error in errors
          p= error

mixin field(labelText, fieldName, fieldValue, fieldType = 'text', placeholder = null)
  div(class='form-group')
    label(for=fieldName id=`${fieldName}_label`)= labelText
    if fieldType === 'textarea'
      textarea(id=fieldName name=fieldName class='form-control' rows='5')= fieldValue
    else
      input(type=fieldType id=`${fieldName}_input` name=fieldName value=fieldValue placeholder=placeholder class='form-control')
