extends layout.pug
include utils.pug
block content
    +validationErrorSummary(errors)
    div(class="register-div")
        div(id="login-container")
            form(action="/users/register" method="post")
                input(type="hidden" value=csrfToken name="_csrf")
                +field("Username", "username", reqBody.username)
                +field("Email Address", "email", reqBody.email)
                +field("Password", "password", "password")
                +field("Confirm Password", "confirmedPassword", "password")
                div(class="form-group")
                    button(class="login-page-btn") get on wit it
