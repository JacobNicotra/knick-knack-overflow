extends layout.pug
include utils.pug
block content
  script(src="/javascripts/votes.js")
  include question-card
  if answers
    div(class="answers-container")
      each answer in answers
        div(class=`answer-${answer.id}`)
        include answer-card
  div(class="write-answer-container")
      form(action=`/api/answers/${question.id}`, method="post")
        +field("", "_csrf", csrfToken, "hidden")
        textarea(class="answerContents" name="answerContents")
        button(class="answer-btn") post answer
