extends layout.pug
include utils.pug
block content
    +validationErrorSummary(errors)
    div(class="register-div")
        form(action="/users/register" method="post")
            +field("", "_csrf", csrfToken, "hidden")
            +field("Username", "username", reqBody.username)
            +field("Email Address", "email", reqBody.email)
            +field("Password", "password")
            +field("Confirm Password", "confirmedPassword")
            div(class="form-group")
                button(id="register-page-btn") get on wit it
